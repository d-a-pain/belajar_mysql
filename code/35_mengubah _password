sudo mysql -u root -p

SET PASSWORD FOR (nama user)@'(localhost/ip/%)' = PASSWORD('(password baru)');



atau merubah password dari user itu sendiri

sudo mysql -u (nama user) -p(password user)

SET PASSWORD = PASSWORD('(password baru)');



untuk menghapus password bisa dengan cara mengkosongkan password tersebut, seperti contoh dibawah

SET PASSWORD FOR (nama user)@'(localhost/ip/%)' = PASSWORD('');
