GRANT SELECT ON (nama_database.nama_tabel) TO 'nama_user'@'(lokasi_user/ip)';  # bisa select, insert, update, delete, dan alter

GRANT SELECT (kolom1, kolom2) ON (nama_database.nama_tabel) TO 'nama_user'@'(lokasi_user/ip);

GRANT SELECT (kolom1, kolom2) ON (nama_database.*) TO 'nama_user'@'(lokasi_user/ip); # tanda (*) digunakan untuk memberi akses (select) semua tabel pada database tersebut

GRANT SELECT (kolom1, kolom2) ON (*.*) TO 'nama_user'@'(lokasi_user/ip); # tanda (*) digunakan untuk memberi akses (select) semua database pada user tersebut

GRANT ALL PRIVILEGES ON (*.*) TO 'nama_user'@'(lokasi_user/ip); # tanda (*) digunakan untuk memberi akses (select, insert, update, delete, dan alter) semua database pada user tersebut

GRANT ALL ON (*.*) TO 'nama_user'@'(lokasi_user/ip); # tanda (*) digunakan untuk memberi akses (select, insert, update, delete, dan alter) semua database pada user tersebut
